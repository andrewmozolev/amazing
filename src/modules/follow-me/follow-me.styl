@import '../../stylus/variables.styl';     // только для удобства обращения к переменным


.follow-me
  padding-top 50px
  padding-bottom 50px
  padding-right 20px
  padding-left 20px
  background-color: $green
  color: $light

  @media (min-width $sm)
    padding-top 80px
    padding-bottom 80px
    padding-left 0

  @media (min-width $md)
    padding-top 135px
    padding-bottom 140px
    padding-right 60px

  &__title
    margin: 0
    font-size $fz--h2
    text-transform: uppercase

  &__text
    max-width 500px
    font-size $fz--md
    font-weight: 300
    letter-spacing -0.025em

    @media (min-width: $sm)
      font-size: $fz--lg

  &__btn
    text-align: center

