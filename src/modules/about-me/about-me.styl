@import '../../stylus/variables.styl';     // только для удобства обращения к переменным


.about-me
  position: relative
  z-index 2
  background-color: $gray-lighten

  &__photo
    @media (min-width $sm)
      position: absolute
      width 50%
      left 0
      top 0
      bottom 0
      overflow: hidden


  &__img
    width 100%

    @media (min-width $sm)
      height 100%
      width auto
      position: absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)

  &__discription
    padding-top 20px
    padding-bottom 20px
    padding-left 20px
    padding-right 20px
    max-width: 550px

    @media (min-width $md)
      padding-left 57px

    @media (min-width $lg)
      padding-top: 90px
      padding-bottom 120px

  &__title
    margin-top 0
    margin-bottom 30px
    text-transform: uppercase
    font-weight 700
    font-size $fz--h2
    color: $gray-light

  &__text
    margin: 0
    font-weight 300
    color: $gray-light
    font-size $fz--p
    letter-spacing: -0.025em

    @media (min-width $md)
      font-size: $fz-lg
