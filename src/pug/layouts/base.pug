include ../modules

//- block variables

doctype html

html(lang="ru")

  head
    meta(charset="utf-8")
    title Title
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="css/style.min.css")

  body.preview
    //- svg(viewBox="0 0 120 120", class="svg-preloader  js-show", id="preloader")
      symbol(id="s-circle")
        circle(r="10", cx="10", cy="10")
      g(id="circle", class="g-circles")
        - for (var x = 0; x < 12; x++)
          use(xlink:href="#s-circle", class="u-circle")

    +page-header

    main.page-content
      block content
      //- +block

    +page-footer

    //- Добавляем popup-fail всем страницам с isPopupFail
    //- if isPopupFail
      +popup-fail

    //- Добавляем popup-success всем страницам с isPopupSuccess
    //- if isPopupSuccess
      +popup-success

    script(src= "js/scripts.min.js")
    //- Добаляем скрипт карты,ести есть isMap
    if isMap
      script(async defer src="http://maps.google.com/maps/api/js?key=AIzaSyAC349Oh0rR9acZB3s5NyfROUcDBWhxoWs&callback=mapHandler")
